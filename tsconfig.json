{
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "node",
    "target": "ES2023",
    "rootDir": ".",
    "outDir": "./dist",
    "strict": true,
    "esModuleInterop": true,
    "allowImportingTsExtensions": false,
    "types": ["node"],
    "lib": ["ES2020"],
    "skipLibCheck": false
  },
  "include": ["src", "prisma.config.ts"],
  "exclude": ["node_modules"]
}
