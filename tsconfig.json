{
  "compilerOptions": {
    "module": "commonjs",
    "moduleResolution": "node",

    "target": "es2020",
    "rootDir": ".",
    "outDir": "dist",

    "strict": true,
    "esModuleInterop": true,

    "allowImportingTsExtensions": false,
    // "types": ["node"],
    // "lib": ["ES2020"],
    "noImplicitAny": false,
    "skipLibCheck": true
  },
  "include": ["src", "prisma.config.ts"],
  "exclude": ["node_modules", "dist"]
}
