model Organization {
    id        String  @id @default(uuid())
    name      String  @unique
    isDeleted Boolean @default(false)

    // Relations
    users    User[]
    projects Project[]

    status    OrgStatus @default(ACTIVE)
    logo      String?


    createdAt DateTime @default(now())
    updatedAt DateTime @updatedAt

    @@map("organizations")
}
